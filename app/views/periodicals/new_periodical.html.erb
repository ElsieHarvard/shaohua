<% title '新建期刊 - '%>
<p>&nbsp;</p>
<div class="cd-cont">
    <%= form_tag({:controller=>"periodicals",:action=>"create_periodical"},{:method=>"post",:multipart=>"true",:onkeydown=>"if(event.ctrlKey&&event.keyCode==13)this.submit()"}) do %>
        <div class="input-group">
            <span class="input-group-addon chinese">月刊期号</span>
            <%= text_field "periodical","prdno",:class=>"form-control chinese",:placeholder=>"PeriodicalNumber",:required=>"true"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">月刊标题</span>
            <%= text_field "periodical","prdtitle",:class=>"form-control chinese",:placeholder=>"PeriodicalTitle",:required=>"true"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">月刊简介</span>
            <%= text_field "periodical","prdinfo",:class=>"form-control chinese",:placeholder=>"PeriodicalInfo",:required=>"true"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">月刊信息</span>
            <%= text_area "periodical","prdmsg",:class=>"form-control chinese",:placeholder=>"PeriodicalMsg",:required=>"true"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章列表</span>
            <%= text_area "periodical","prdpages",:style=>"width:100%",:class=>"form-control chinese",:placeholder=>"PeriodicalContent",:required=>"true"%>
        </div>
        <p class="text-right"><input role="button" class="btn btn-default chinese" type="submit" value="提交"></p>
    <% end %>
</div>