<% title 'Advanced Article Publish for Periodical - '%>
<p>&nbsp;</p>
<div class="cd-cont">
    <%= form_tag({:controller=>"articles",:action=>"create_advanced_new_article"},{:method=>"post",:multipart=>"true",:onkeydown=>"if(event.ctrlKey&&event.keyCode==13)this.submit()"}) do %>
        <div class="input-group">
            <span class="input-group-addon chinese">文章图片</span>
            <%= file_field "article","arcpicture",:class=>"form-control chinese",:placeholder=>"ArticlePicture"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章标题</span>
            <%= text_field "article","arctitle",:class=>"form-control chinese",:placeholder=>"ArticleTitle"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">作者标签</span>
            <%= text_field "article","arcpreauthor",:class=>"form-control chinese",:placeholder=>"ArticlePreAuthor",:value=>"By: "%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章作者</span>
            <%= text_field "article","arcauthor",:class=>"form-control chinese",:placeholder=>"ArticleAuthor"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章编号</span>
            <%= text_field "article","arcnumber",:class=>"form-control chinese",:placeholder=>"ArticleNumber"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章题记</span>
            <%= text_area "article","arcbeforecontent",:style=>"width:100%",:class=>"form-control chinese",:placeholder=>"ArticleBeforeContent"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">题记标签</span>
            <%= text_field "article","arcattrbeforecontent",:class=>"form-control chinese",:placeholder=>"ArticleAttrBeforeContent",:value=>"——题记"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章正文</span>
            <%= text_area "article","arccontent",:style=>"width:100%",:class=>"form-control chinese",:placeholder=>"ArticleContent"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">后记标签</span>
            <%= text_field "article","arcattraftercontent",:class=>"form-control chinese",:placeholder=>"ArticleAttrAfterContent",:value=>"后记："%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">文章后记</span>
            <%= text_area "article","arcaftercontent",:style=>"width:100%",:class=>"form-control chinese",:placeholder=>"ArticleAfterContent"%>
        </div>
        <div class="input-group">
            <span class="input-group-addon chinese">所属月刊</span>
            <%= text_field "article","prdhash",:style=>"width:100%",:class=>"form-control chinese",:placeholder=>"ArticlePeriodicalHash"%>
        </div>
        <p class="text-right"><input role="button" class="btn btn-default chinese" type="submit" value="提交"></p>
    <% end %>
</div>