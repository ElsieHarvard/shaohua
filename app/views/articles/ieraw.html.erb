<% else %>
<div class="cd-perio-back">
<%title @article.arc_title+' - '%>
    <div class="cd-perio">
        <div class="cd-perio-text">
            <img src="/periodical/img/<%=@article.arc_hash%>.jpg">
            <div class="page-header">
                <h1 class="text-center"><%=@article.arc_title%></h1>
                <p class="text-right cd-perio-author"><%=@article.arc_preauthor%><%=@article.arc_author%></p>
            </div>
            <% unless @article.arc_beforecontent.blank?%>
                <%@article.arc_beforecontent.each_line do |w|%>
                    <p><%=w%></p>
                <% end %>
                <p class="text-right paddingright2em"><%=@article.arc_attrbeforecontent%></p>
            <% end %>
            <p></p>
            <%@article.arc_content.each_line do |w|%>
                <p><%=w%></p>
            <% end %>
            <% unless @article.arc_aftercontent.blank?%>
                <p>&nbsp;</p>
                <p class="no-text-indent halflinemargin"><%=@article.arc_attraftercontent%></p>
                <%@article.arc_aftercontent.each_line do |w|%>
                    <p><%=w%></p>
                <% end %>
            <% end %>
            <p>&nbsp;</p>
        </div>
    </div>
</div>
<% end %>
