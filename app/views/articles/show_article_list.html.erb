<%title hctitle+' - ' if (pagetit rescue nil)%>
<% if (pagetit rescue nil) %>
<p>&nbsp;</p>
<div class="cd-cont">
<% end %>
<% @localusrlogin = usrlogin %>
<div class="panel panel-default">
    <div class="panel-heading"><h3><%=hctitle%></h3></div>
    <div class="panel-body">
        <table class="table table-striped" style="word-break:break-all;word-wrap:break-all;">
            <thead><tr><th width="20%">题目</th><th width="12%">作者</th><th>Content</th><%if @localusrlogin then%><th width="50px">Rate</th><%end%></tr></thead>
            <tbody>
                <%list.each do|w|%>
                    <tr>
                        <td><%=link_to w.arc_title,'/article/'+w.arc_hash%></td>
                        <td><%=link_to w.arc_author,'/bbs/'+w.arc_author_hash%></td>
                        <td><small><%=w.arc_content[0..59]%>...</small></td>
                        <%if @localusrlogin then%><td><small><%=sprintf("%.3f",w.arc_rate/1000.0)%></small></td><%end%>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<% if (pagetit rescue nil) %>
</div>
<% end %>
