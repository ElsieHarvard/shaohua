<%title hctitle+' - ' if (pagetit rescue nil)%>
<% if (pagetit rescue nil) %>
<p>&nbsp;</p>
<div class="cd-cont">
<% end %>
<div class="panel panel-default">
    <div class="panel-heading"><h3><%=hctitle%></h3></div>
    <div class="panel-body">
        <table class="table table-striped" style="word-break:break-all;word-wrap:break-all;">
            <thead><tr><th width="60%">题目</th><th width="40%">作者</th></tr></thead>
            <tbody>
                <%list.each do|w|%>
                    <tr>
                        <td><%=link_to w.arctitle,'/article/'+w.archash%></td>
                        <td><%=link_to w.arcauthor,'/article/author/'+mkhsh(w.arcauthor)%></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<% if (pagetit rescue nil) %>
</div>
<% end %>