<!DOCTYPE html>
<%unless (@weblayoutadmin rescue nil) %>
<html lang="zh-cn">
    <head>
        <meta charset="utf-8">
        <meta name="renderer" content="webkit">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="/favicon.ico">
        <!--[if lt IE 9]>
            <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js">
            <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js">
        <![endif]-->
        <title><%= yield :title %>北京十二中韶华文学社</title> 
<%= csrf_meta_tags %>
    </head>
    <body>
        <a name="top"></a>
        <header class="cd-main-header chinese">
            <a class="cd-logo" href="/"><img src="/img/cd-logo.svg" alt="Logo"></a>
            <ul class="cd-header-buttons">
                <li><a class="cd-search-trigger" href="#cd-search"><span></span></a></li>
                <li><a class="cd-nav-trigger" href="#cd-primary-nav"><span></span></a></li>
            </ul>
        </header>
<%=render :template=>'web_shell/mainsite_navigator'%>
        <% if @homepage %>
            <div class="jumbotron non-margin-bottom non-padding cd-main-content cd-head-fix">
                <img alt="shaohua" src="<%= yield :web_local_head_img_src%>" id="toc">
            </div>
        <% end %>
        <main class="cd-main-content chine" id="cd-main">
            <div class="cd-overlay"></div>
            <%= yield %>
        </main>
        <a href="#0" class="cd-back-top">Top</a>
        <footer class="footer cd-main-content">
<%=render :template=>'web_shell/mainsite_footer'%>
        </footer>
        <script src="/js/jquery.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        <script src="/js/ie10-viewport-bug-workaround.js"></script>
        <script src="/js/jquery.mobile.custom.min.js"></script>
        <script src="/js/modernizr.js"></script>
        <script src="/js/backtotop.js"></script>
        <script src="/js/jquery.mixitup.min.js"></script>
        <script src="/js/velocity.min.js"></script>
        <script src="/js/main.js"></script>
        <script src="/js/login.js"></script>
        <script src="/js/arctotop.js"></script>
        <link href="http://cdn.bootcss.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/reset.css" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/backtotop.css" rel="stylesheet">
        <link href="/css/stylecontents.css" rel="stylesheet">
        <link href="/css/styleperiodical.css" rel="stylesheet">
        <link href="/css/bbs.css" rel="stylesheet">
    </body>
</html>
<% else %>
<html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta name="renderer" content="webkit">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="">
        <title>Administration Dashboard</title>
        <!-- Bootstrap core CSS -->
        <link href="/css/bootstrap.css" rel="stylesheet">
        <link href="/css/chinese.css" rel="stylesheet">
        <link href="/css/prettify.css" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="/css/dashboard.css" rel="stylesheet">
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="/js/html5shiv.js"></script>
            <script src="/js/respond.js"></script>
        <![endif]-->
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand chinese" href="/">shaohua</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/administration/dashboard">Dashboard</a></li>
                        <li><a href="/administration/settings">Settings</a></li>
                        <li><a href="/administration/profile">Profile</a></li>
                    </ul>
                    <!-- Search Form -->
                    <!--
                    <form class="navbar-form navbar-right" id="search" name="search">
                        <input type="text" class="form-control" name="search" placeholder="Search...">
                    </form>
                    -->
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul class="nav nav-sidebar">
                        <li><a href="/administration/dashboard">Overview</a></li>
                        <li><a href="/administration/reports">Reports</a></li>
                        <li><a href="/administration/analytics">Analytics</a></li>
                    </ul>
                    <ul class="nav nav-sidebar">
<%=render :template=>'web_admin/navigator'%>
                    </ul>
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    <%= yield %>
                </div>
            </div>
        </div>
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.js"></script>
        <script src="/js/run_prettify.js"></script>
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="/js/ie10-viewport-bug-workaround.js"></script>
    </body>
</html>
<% end %>
