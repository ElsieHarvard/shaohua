<div class="panel panel-default">
  <div class="panel-heading"><h3>Articles</h3></div>
  <div class="panel-body">
    <table class="table table-striped" style="word-break:break-all;word-wrap:break-all;">
      <thead>
        <tr>
          <th>题目</th>
          <th>作者</th>
          <th>Content</th>
          <th>Tag</th>
        </tr>
      </thead>
      <tbody>
        <% data.each do |w| %>
          <tr>
            <td><%= link_to w[:title], article_path+'/'+w[:path] %></td>
            <td><%= link_to w[:usr_name], bbs_member_path(w[:ext_author_idhsh]) %></td>
            <td><small><%= w[:content] %>...</small></td>
            <td><%= w[:tag] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
